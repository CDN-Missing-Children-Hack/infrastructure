{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "namespaces_SBNamespace_name": {
            "defaultValue": "MCSCSBNamespace",
            "type": "String"
        },
        "AuthorizationRules_RootManageSharedAccessKey_name": {
            "defaultValue": "[concat(parameters('namespaces_SBNamespace_name'),'RootManageSharedAccessKey')]",
            "type": "String"
        },
        "queues_queue1_name": {
            "defaultValue": "[concat(parameters('namespaces_SBNamespace_name'),'queue1')]",
            "type": "String"
        },
        "queues_queue2_name": {
            "defaultValue": "[concat(parameters('namespaces_SBNamespace_name'),'queue2')]",
            "type": "String"
        },
        "queues_queue3_name": {
            "defaultValue": "[concat(parameters('namespaces_SBNamespace_name'),'queue3')]",
            "type": "String"
        },
        "queues_queue4_name": {
            "defaultValue": "[concat(parameters('namespaces_SBNamespace_name'),'queue4')]",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2015-08-01",
            "name": "[parameters('namespaces_SBNamespace_name')]",
            "location": "[resourceGroup().location]",
            "type": "Microsoft.ServiceBus/namespaces",
            "sku": {
                "name": "Standard",
                "tier": "Standard",
                "capacity": 1
            },
            "kind": "Messaging",
            "properties": {
                "provisioningState": "Succeeded",
                "status": "Active",
                "createdAt": "2016-10-20T23:19:08.78Z",
                "serviceBusEndpoint": "[concat('https://', parameters('namespaces_SBNamespace_name'),'.servicebus.windows.net:443/')]",
                "enabled": true
            },
            "resources": [],
            "dependsOn": []
        },
        {
            "apiVersion": "2015-08-01",
            "type": "Microsoft.ServiceBus/namespaces/AuthorizationRules",
            "name": "[parameters('AuthorizationRules_RootManageSharedAccessKey_name')]",
            "properties": {
                "rights": [
                    "Listen",
                    "Manage",
                    "Send"
                ]
            },
            "resources": [],
            "dependsOn": [
                "[resourceId('Microsoft.ServiceBus/namespaces', parameters('namespaces_SBNamespace_name'))]"
            ]
        }

    ]
}